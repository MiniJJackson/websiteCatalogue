{# .twig mag je weglaten als het een twig bestand is #}
{% extends "_layout" %}

{% block content %}
    <h1><span class="diomand">&diams; ~</span> New in <span class="diomand">~ &diams;</span></h1>

    <section class="clothing-section">
    {% set entries = craft.entries().section('clothing').limit(4) %}

    {% for entry in entries %}
        <article>
            <picture>
            <source media="(min-width:960px)" srcset="{{entry.bannerImage.one().url('thumbnailImage')}}">
            <img src="{{entry.bannerImage.one().url('thumbnailImage')}}" alt="">
            </picture>
            <div class="frontpageClothes">
                <h2><a href="{{entry.url}}">{{entry.title}}</a></h2>
                <h3>{{entry.brand}} {# &nbsp; {{entry.price}} #}</h3>
                <p>{{entry.introText}}</p>
                <a class="button btn-read" href="{{entry.url}}">read more</a>
            </div>
        </article>
    {% endfor %}

    </section>
    <a class="button btn-more" href="/clothing">More Clothes</a>
{% endblock %}